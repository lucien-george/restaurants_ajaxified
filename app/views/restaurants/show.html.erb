<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <!-- /restaurants/:restaurant_id/reviews POST -->
  <% if @restaurant.reviews.any? %>
    <% @restaurant.reviews.each do |review| %>
      <div class="my-5">
        <p><%= review.content %> <%= link_to 'delete', review_path(review), remote: true, method: :delete %></p>
      </div>
    <% end %>
  <% else %>
    <div class="my-5">
      <p>No reviews yet</p>
    </div>
  <% end %>
  <%= simple_form_for [@restaurant, @review], remote: true do |f| %>
    <%= f.input :content %>
    <%= f.submit %>
  <% end %>
</div>
